{
  "kind": "collectionType",
  "collectionName": "exams",
  "info": {
    "singularName": "exam",
    "pluralName": "exams",
    "displayName": "Exam",
    "description": "Exams and quizzes for courses"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "examType": {
      "type": "enumeration",
      "default": "quiz",
      "enum": [
        "quiz",
        "midterm",
        "final",
        "practice",
        "assignment"
      ]
    },
    "duration": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "totalPoints": {
      "type": "integer",
      "default": 100
    },
    "passingScore": {
      "type": "integer",
      "default": 60,
      "min": 0,
      "max": 100
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "maxAttempts": {
      "type": "integer",
      "default": 1,
      "min": 0
    },
    "shuffleQuestions": {
      "type": "boolean",
      "default": false
    },
    "showResults": {
      "type": "boolean",
      "default": true
    },
    "showCorrectAnswers": {
      "type": "boolean",
      "default": false
    },
    "instructions": {
      "type": "richtext"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject"
    },
    "questions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::question.question",
      "mappedBy": "exams"
    },
    "examAttempts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::exam-attempt.exam-attempt",
      "mappedBy": "exam"
    },
    "results": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::result.result",
      "mappedBy": "exam"
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "exam_attempts",
  "info": {
    "singularName": "exam-attempt",
    "pluralName": "exam-attempts",
    "displayName": "Exam Attempt",
    "description": "Student exam submissions and results"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "attemptNumber": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "startedAt": {
      "type": "datetime",
      "required": true
    },
    "submittedAt": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "in-progress",
        "submitted",
        "graded",
        "expired"
      ],
      "default": "in-progress"
    },
    "score": {
      "type": "decimal",
      "description": "Score obtained"
    },
    "percentage": {
      "type": "decimal",
      "description": "Percentage score"
    },
    "passed": {
      "type": "boolean",
      "default": false
    },
    "timeTaken": {
      "type": "integer",
      "description": "Time taken in seconds"
    },
    "answers": {
      "type": "json",
      "description": "Student answers. Format: [{\"questionId\":1,\"answer\":\"a\",\"isCorrect\":true,\"points\":1}]"
    },
    "feedback": {
      "type": "richtext",
      "description": "Instructor feedback"
    },
    "student": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "exam": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::exam.exam",
      "inversedBy": "examAttempts"
    }
  }
}

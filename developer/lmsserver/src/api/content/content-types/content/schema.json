{
  "kind": "collectionType",
  "collectionName": "contents",
  "info": {
    "singularName": "content",
    "pluralName": "contents",
    "displayName": "content"
  },
  
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "richtext": {
      "type": "blocks"
    },
    "richtext_markdown": {
      "type": "richtext"
    },
    "contentype": {
      "type": "enumeration",
      "enum": [
        "plaintext",
        "richtext",
        "richtext_markdown",
        "images",
        "vidos",
        "youtube",
        "msoffice"
      ]
    },
    "youtubeurl": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "videos": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "youtubeurls": {
      "type": "json"
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject",
      "inversedBy": "contents"
    }
  }
}
